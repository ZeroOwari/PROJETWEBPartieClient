{% extends "base.html.twig" %}

{% block head %}
    <script src="{{ asset('connexion.js') }}"></script>
{% endblock %}

{% block content %}
    {% if user %}
        <script>window.location.href = "?page=accueil";</script>
    {% else %}
        <div class="container-white">
            <h1 class="job-title job-title-blue">Espace étudiant</h1>
        </div>
        <img src="{{ asset('flou2.png') }}" class="image">
        <div class="bloc bloc-white">
            <h2 class="titre-connexion titre-connexion-blue">Se connecter</h2>
            <form  class="formulaire-connexion" action="ConnexionEtudiant.php" method="POST">
                <div class="champ-formulaire champ-formulaire-blue champ-formulaire-connexion">
                    <label for="email">E-mail</label>
                    <input type="email" id="email" name="email" placeholder="Entrez votre adresse email">
                </div>
                <div class="champ-formulaire champ-formulaire-blue champ-formulaire-connexion">
                    <label for="password">Mot de passe</label>
                    <div style="position: relative;">
                        <input type="password" id="password" name="password" placeholder="Tapez votre mode passe">
                        <button type="button" class="toggle-password" onclick="togglePassword('password')">👁</button>
                    </div>
                </div>
                <div class="option-rester-connecte option-rester-connecte-blue">
                    <input type="checkbox" id="rester-connecte">
                    <label for="rester-connecte">Rester connecter</label>
                </div>
                <button type="submit" value ="submit" id="login-button" class="bouton-connexion bouton-connexion-blue">Se connecter</button>
            </form>
        </div>
    {% endif %}
{% endblock %}